.row
  .col-md-4
    #profile.panel.panel-default
      .panel-heading
        = image_tag @fan.avatar.url(:full)
      .panel-body
        %h3= @fan.name

%h3 Artists you've requested
.row 
  - @fan.artists.each do |a|
    .col-md-4
      #profile.panel.panel-default
        .panel-heading
          = image_tag a.avatar.url(:full)
        .panel-body
          %h4= link_to a.name, artist_path(a)
          %p= a.bio
%h3 Other artists requested in your city
.row
  - @other_artist_list.each do |o|
    .col-md-4
      #profile.panel.panel-default.artists
        .panel-heading
          = image_tag o.avatar.url(:full)
        .panel-body
          %h4= link_to o.name, artist_path(o)
          %p= o.bio